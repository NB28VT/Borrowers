<table class="primary">
  <thead>
    <tr>
      <th>Name</th>
      <th>Articles</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |friend|}}
    <tr>
      <td>
         {{link-to friend.firstName "articles" friend}}
      </td>
      <td>{{friend.totalArticles}}</td>
      <td><a href="#" {{action "delete" friend}}>Delete</a></td>
    </tr>
  {{/each}}
  </tbody>
</table>

